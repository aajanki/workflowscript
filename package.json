{
  "name": "workflowscript",
  "version": "0.1.0",
  "description": "A JavaScript-inspired programming language for writing GCP Workflows programs",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "type": "module",
  "engines": {
    "node": ">=20"
  },
  "scripts": {
    "build": "npm run buildCstTypes && tsc -p tsconfig.json",
    "buildCstTypes": "tsx tools/generateDts.ts > src/parser/cst.d.ts",
    "prepare": "npm run build",
    "prepublishOnly": "npm run lint && npm run test",
    "test": "mocha",
    "lint": "eslint src",
    "format": "prettier . --write",
    "diagram": "tsx tools/diagram.ts > grammar.html"
  },
  "bin": {
    "wfscompile": "./dist/compile.js"
  },
  "author": "Antti Ajanki <antti.ajanki@iki.fi>",
  "license": "MIT",
  "dependencies": {
    "chevrotain": "^11.0.3",
    "commander": "^12.0.0",
    "yaml": "^2.3.4"
  },
  "devDependencies": {
    "@types/chai": "^4.3.11",
    "@types/mocha": "^10.0.6",
    "@types/node": "~20",
    "@typescript-eslint/eslint-plugin": "^7.0.1",
    "@typescript-eslint/parser": "^7.0.1",
    "chai": "^5.1.0",
    "eslint": "^8.56.0",
    "mocha": "^10.2.0",
    "prettier": "^3.2.5",
    "tsx": "^4.7.0",
    "typescript": "^5.3.3"
  }
}
